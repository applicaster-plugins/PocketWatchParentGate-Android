<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/dialog_background"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/dialog_padding_top"
        android:paddingBottom="@dimen/dialog_padding_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dialog_padding_horizontal"
            android:layout_marginEnd="@dimen/dialog_padding_horizontal"
            android:orientation="vertical">

            <TextView
                style="@style/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/get_notified_about_new_shows" />

            <TextView
                style="@style/dialog_grey_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="@string/terms_description" />

            <TextView
                android:id="@+id/privacyPolicy"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/metropolis_medium_font"
                android:gravity="center"
                android:text="@string/view_privacy_policy"
                android:textColor="@color/text_button_text_color"
                android:textSize="16dp" />
        </LinearLayout>

        <Button
            android:id="@+id/ok"
            style="@style/main_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/big_button"
            android:layout_marginStart="@dimen/dialog_padding_horizontal"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="@dimen/dialog_padding_horizontal"
            android:text="@string/yes_please" />

        <TextView
            android:id="@+id/noThanks"
            style="@style/white_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/big_button"
            android:layout_marginStart="@dimen/dialog_padding_horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="@dimen/dialog_padding_horizontal"
            android:gravity="center"
            android:text="@string/no_thanks" />
    </LinearLayout>
</ScrollView>
